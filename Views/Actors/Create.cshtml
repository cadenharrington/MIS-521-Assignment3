@model FL2024_Assignment3_charrington.ViewModels.ActorCreateViewModel

@{
    ViewData["Title"] = "Create Actor";
}

<h1>Create Actor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <!-- Validation summary to display general errors -->
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Name field -->
            <div class="form-group">
                <label asp-for="Actor.Name" class="control-label"></label>
                <input asp-for="Actor.Name" class="form-control" />
                <span asp-validation-for="Actor.Name" class="text-danger"></span>
            </div>

            <!-- Gender field -->
            <div class="form-group">
                <label asp-for="Actor.Gender" class="control-label"></label>
                <input asp-for="Actor.Gender" class="form-control" />
                <span asp-validation-for="Actor.Gender" class="text-danger"></span>
            </div>

            <!-- Age field -->
            <div class="form-group">
                <label asp-for="Actor.Age" class="control-label"></label>
                <input asp-for="Actor.Age" class="form-control" />
                <span asp-validation-for="Actor.Age" class="text-danger"></span>
            </div>

            <!-- IMDB Link field -->
            <div class="form-group">
                <label asp-for="Actor.IMDBHyperlink" class="control-label"></label>
                <input asp-for="Actor.IMDBHyperlink" class="form-control" />
                <span asp-validation-for="Actor.IMDBHyperlink" class="text-danger"></span>
            </div>

            <!-- Photo field -->
            <div class="form-group">
                <label asp-for="Photo" class="control-label">Actor Photo</label>
                <input asp-for="Photo" class="form-control" type="file" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>

            <!-- Movie selection field -->
            @if (ViewBag.Movies != null && ((IEnumerable<SelectListItem>)ViewBag.Movies).Any())
            {
                <select asp-for="SelectedMovies" class="form-control" asp-items="ViewBag.Movies" multiple="multiple" data-val="false"></select>
            }
            else
            {
                <p>No movies available to select</p>
            }

            <!-- Submit button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
