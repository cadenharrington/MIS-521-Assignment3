@model IEnumerable<FL2024_Assignment3_charrington.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<h1>Actors</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Actor</a>
</p>
<table id="actorsTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Gender)</th>
            <th>@Html.DisplayNameFor(model => model.Age)</th>
            <th>@Html.DisplayNameFor(model => model.IMDBHyperlink)</th>
            <th>@Html.DisplayNameFor(model => model.Photo)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                <td>@Html.DisplayFor(modelItem => item.Age)</td>
                <td><a href="@item.IMDBHyperlink" target="_blank">@Html.DisplayFor(modelItem => item.IMDBHyperlink)</a></td>
                <td>
                    @if (item.Photo != null)
                    {
                        <img src="data:image;base64,@Convert.ToBase64String(item.Photo)" alt="Actor Photo" width="100" height="100" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#actorsTable').DataTable();
    });
</script>
